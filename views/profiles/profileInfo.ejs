<div class="profile-info">
    <div class="user-info">
        <div id="profile-header-pfp">
            <div class="circle-container">
                <img class="user-pfp" src='/uploads/pfpImages/<%=user.pfp%>'>
            </div>
            <% if(isLoggedIn) {%>
                <% if(user.id === loggedUser._id) {%>
                    <a id="edit" href="/profiles/<%=user.id%>/edit">Edit</a>
                <% } %>
            <% } %>
        </div>
        <div class="user-info-right">
            <div id="profile-username"><%=user.username%></div>
            <div id="profile-bio"><%=user.bio%></div>
            <!-- add following people -->
        </div>
    </div>
    <div class="profile-header-buttons">
        <div class="profile-header-links">
            <a href="/profiles/<%=user.id%>" value="overview">Overview</a>
            <a href="/profiles/<%=user.id%>/posts" value="posts">Posts</a>
            <a href="/profiles/<%=user.id%>/comments" value="comments">Comments</a>
        </div>
    </div>
</div>